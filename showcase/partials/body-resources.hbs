<div ng-show="appController.spinner" class="overlay overlay-inverse">
	<div class="spinner-viewport">
		<span class="spinner fa fa-spinner fa-4x"></span>
	</div>
</div>
<!-- build:js {{../assets}}min/vendors.min.js -->
{{#each env.resources.vendor.js}}
	<script src="{{../assets}}{{../app.vendor.path}}{{this}}"></script>
{{~/each}}
{{#if env.app.systemjs}}
	<script src="{{../assets}}{{../app.vendor.path}}systemjs/dist/system.js"></script>
	<script src="{{../assets}}{{../app.vendor.path}}systemjs/dist/system-polyfills.js"></script>
{{/if}}
<!-- endbuild -->

<!-- build:js {{../assets}}min/{{env.app.module}}.min.js -->
{{#each env.resources.app}}
	<script src="{{../assets}}{{this}}"></script>
{{~/each}}
{{#unless env.app.systemjs}}
	{{#each env.resources.bundles}}
		<script src="{{../assets}}{{this}}"></script>
	{{~/each}}
{{/unless}}
<!-- endbuild -->
