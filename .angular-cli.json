{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "oblique-reactive"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "target",
      "assets": [
        {
          "glob": "**/*",
          "input": "./showcase/assets",
          "output": "./assets"
        },
        {
          "glob": "**/*",
          "input": "../node_modules/oblique-ui/images",
          "output": "./assets/oblique-ui/images"
        }
      ],
      "index": "showcase/index.html",
      "main": "showcase/main.ts",
      "polyfills": "showcase/polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "../node_modules/oblique-ui/css/oblique-ui.css",
        "showcase/scss/styles.scss"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json"
    },
    {
      "project": "src/tsconfig.spec.json"
    },
    {
      "project": "e2e/tsconfig.e2e.json"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "scss",
    "component": {
      "spec": true,
      "inlineTemplate": false
    }
  }
}
